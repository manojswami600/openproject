<VirtualHost *:80>
  ServerName <%= ENV.fetch('SERVER_NAME') { "_default_" } %>
  DocumentRoot <%= ENV.fetch('APP_PATH') %>/public

  ProxyRequests off
  ProxyPreserveHost On

  <Location />
    ProxyPass http://<%= ENV.fetch("APP_HOST", "127.0.0.1") %>:8080/ retry=0
    ProxyPassReverse http://<%= ENV.fetch("APP_HOST", "127.0.0.1") %>:8080/
  </Location>
</VirtualHost>
